<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>club.wljyes.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>club.wljyes.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>club.wljyes.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeNickname</servlet-name>
        <url-pattern>/changeNickname</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangeNickname</servlet-name>
        <servlet-class>club.wljyes.servlet.ChangeNickname</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePassword</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangePassword</servlet-name>
        <servlet-class>club.wljyes.servlet.ChangePassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FriendListServlet</servlet-name>
        <servlet-class>club.wljyes.servlet.FriendListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FriendListServlet</servlet-name>
        <url-pattern>/friendList</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddFriendServlet</servlet-name>
        <servlet-class>club.wljyes.servlet.AddFriendServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddFriendServlet</servlet-name>
        <url-pattern>/addFriend</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RequestListServlet</servlet-name>
        <servlet-class>club.wljyes.servlet.RequestListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestListServlet</servlet-name>
        <url-pattern>/requestList</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AgreeAddServlet</servlet-name>
        <servlet-class>club.wljyes.servlet.AgreeAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AgreeAddServlet</servlet-name>
        <url-pattern>/agreeAdd</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>club.wljyes.filter.AccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>club.wljyes.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>club.wljyes.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>